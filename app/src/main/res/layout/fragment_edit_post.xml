<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="4dp"
            tools:ignore="MissingConstraints">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginBottom="16dp"
                          android:orientation="horizontal">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_weight="3"
                          android:textSize="26sp"
                          android:text="Edit Post"
                          android:textStyle="bold"
                          android:padding="20dp"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textAlignment="center"
                          android:layout_marginStart="16dp"
                          android:text="Post title:"
                          android:textStyle="bold"
                          android:padding="0dp"/>

                <EditText android:id="@+id/etTitle"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_margin="16dp"
                          android:textColor="@android:color/black"/>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textAlignment="center"
                          android:layout_marginStart="16dp"
                          android:text="Room type:"
                          android:textStyle="bold"
                          android:padding="0dp"/>
                <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="16dp"
                        android:orientation="horizontal">
                    <RadioButton
                            android:text="Home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/radioButtonHome"
                            android:buttonTint="@color/colorPrimary"
                            android:layout_weight="1"/>
                    <RadioButton
                            android:text="Room"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/radioBtnRoom"
                            android:buttonTint="@color/colorPrimary"
                            android:layout_weight="1"/>
                </RadioGroup>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="8dp"
                          android:orientation="vertical">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textAlignment="center"
                          android:layout_marginStart="16dp"
                          android:text="Total square"
                          android:textStyle="bold"
                          android:padding="0dp"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <EditText android:id="@+id/etSquare"
                              android:layout_width="44dp"
                              android:layout_height="wrap_content"
                              android:layout_margin="16dp"
                              android:inputType="number"
                              android:layout_weight="4"
                              android:textColor="@android:color/black"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="m2"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textAlignment="center"
                          android:layout_marginStart="16dp"
                          android:text="Floor"
                          android:textStyle="bold"
                          android:padding="0dp"/>

                <EditText android:id="@+id/etFloor"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_margin="16dp"
                          android:textColor="@android:color/black"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textAlignment="center"
                          android:layout_marginStart="16dp"
                          android:text="Address"
                          android:textStyle="bold"
                          android:padding="0dp"/>

                <EditText android:id="@+id/etAddress"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_margin="16dp"
                          android:textColor="@android:color/black"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textAlignment="center"
                          android:layout_marginStart="16dp"
                          android:text="Price"
                          android:textStyle="bold"
                          android:padding="0dp"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <EditText android:id="@+id/etPrice"
                              android:layout_width="44dp"
                              android:layout_height="wrap_content"
                              android:layout_margin="16dp"
                              android:inputType="number"
                              android:layout_weight="4"
                              android:textColor="@android:color/black"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="VND/Month"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textAlignment="center"
                          android:layout_marginStart="16dp"
                          android:text="Prepaid"
                          android:textStyle="bold"
                          android:padding="0dp"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <EditText android:id="@+id/etPrepaid"
                              android:layout_width="44dp"
                              android:layout_height="wrap_content"
                              android:layout_margin="16dp"
                              android:inputType="number"
                              android:layout_weight="2"
                              android:textColor="@android:color/black"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="VND"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginBottom="16dp"
                          android:orientation="vertical">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textAlignment="center"
                          android:layout_marginStart="16dp"
                          android:text="Furniture"
                          android:textStyle="bold"
                          android:padding="0dp"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="32dp"
                            android:layout_weight="0"
                            android:text="Bed"/>
                    <EditText android:id="@+id/etBed"
                              android:layout_width="44dp"
                              android:layout_height="wrap_content"
                              android:layout_margin="16dp"
                              android:inputType="number"
                              android:layout_weight="1"
                              android:textColor="@android:color/black"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="32dp"
                            android:layout_weight="0"
                            android:text="Toilet"/>
                    <EditText android:id="@+id/etToilet"
                              android:layout_width="44dp"
                              android:layout_height="wrap_content"
                              android:layout_margin="16dp"
                              android:inputType="number"
                              android:layout_weight="1"
                              android:textColor="@android:color/black"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="32dp"
                            android:layout_weight="0"
                            android:text="Kitchen"/>
                    <EditText android:id="@+id/etKitchen"
                              android:layout_width="44dp"
                              android:layout_height="wrap_content"
                              android:layout_margin="16dp"
                              android:inputType="number"
                              android:layout_weight="1"
                              android:textColor="@android:color/black"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginStart="32dp"
                            android:layout_weight="1"
                            android:text="Cooking Available"/>
                    <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="horizontal">
                        <RadioButton
                                android:text="yes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/radioBntYes"
                                android:layout_weight="1"/>
                        <RadioButton
                                android:text="no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/radioBtnNo"
                                android:layout_weight="1"/>
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textAlignment="center"
                          android:layout_marginStart="16dp"
                          android:text="Description"
                          android:textStyle="bold"
                          android:padding="0dp"/>

                <EditText android:id="@+id/etDescription"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_margin="16dp"
                          android:textColor="@android:color/black"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textAlignment="center"
                          android:layout_marginStart="16dp"
                          android:text="Contract Term"
                          android:textStyle="bold"
                          android:padding="0dp"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textAlignment="center"
                          android:layout_marginStart="32dp"
                          android:layout_marginTop="16dp"
                          android:layout_marginBottom="16dp"
                          android:text="View Contract Term"
                          android:textColor="@color/colorGreen"
                          android:textStyle="italic"
                          android:padding="0dp"/>
            </LinearLayout>

            <Button android:id="@+id/btnUploadImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/btn_rounded_signup"
                    android:text="Upload Image"/>

            <Button android:id="@+id/btnEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_rounded"
                    android:text="Edit"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>