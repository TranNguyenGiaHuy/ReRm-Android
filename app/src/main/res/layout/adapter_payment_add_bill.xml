<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/llContainer">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivAvatar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

    <LinearLayout
            android:id="@+id/llInfoContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="6">

        <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please add bill for"/>

        <TextView
                android:id="@+id/tvRoomPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Room price: "/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

            <EditText
                    android:id="@+id/etElectricityBill"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:hint="Electricity Bill"
                    android:inputType="number"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="VND"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

            <EditText
                    android:id="@+id/etWaterBill"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:hint="Water Bill"
                    android:inputType="number"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="VND"/>

        </LinearLayout>

    </LinearLayout>

    <Button
            android:id="@+id/btn_send"
            android:layout_width="0dp"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_gravity="center"
            android:text="Send"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

</LinearLayout>